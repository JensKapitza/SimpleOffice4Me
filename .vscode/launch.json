    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask debugging",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "PYTHONIOENCODING": "utf8",
                "FLASK_APP": "app",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--debugger"
            ],
            "jinja": true
        },
        {
            "name": "Python: Flask production",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "PYTHONIOENCODING": "utf8",
                "FLASK_APP": "app",
                "FLASK_ENV": "production"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}